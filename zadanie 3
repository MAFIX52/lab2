#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	const int num = 5; 

	
	for (int i = 0; i < num - 1; i++) {
		for (int j = 0; j < num - i - 1; j++) {
			cout << " ";
		}
		for (int j = 0; j < 2 * i + 1; j++) {
			cout << "-";
		}
		cout << "\n";
	}

	
	for (int i = 0; i < num; i++) {
		for (int j = 0; j < num * 2 - 1; j++) {
			cout << "-";
		}
		cout << "\n";
	}

	return 0;
}
